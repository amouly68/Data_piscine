#SQL QUERY TO CREATE TABLE
CREATE TABLE data_2022_oct (
    event_time TIMESTAMPTZ NOT NULL,
    event_type TEXT,
    product_id INTEGER,
    price FLOAT,
    user_id BIGINT,
    user_session UUID
);


CREATE TABLE item (
    product_id INTEGER,
    category_id BIGINT,
    category_code TEXT,
    brand TEXT
);


#SQL QUERY TO IMPORT DATA
COPY data_2022_oct 
FROM '/csv_files/customer/data_2022_oct.csv' 
DELIMITER ',' 
CSV HEADER;

#SQL QUERY TO QUERY DATA
SELECT * FROM data_2022_oct LIMIT 10;
